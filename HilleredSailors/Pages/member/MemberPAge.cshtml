@page
@model HilleredSailors.Pages.member.MemberPAgeModel
@{
    ViewData["Title"] = "MemberPAge"; 
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="@Model.Member.Name" class="control-label"></label>
        <input asp-for="@Model.Member.Name" class="form-control" readonly="@Model.edit" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Member.Phone" class="control-label"></label>
        <input asp-for="@Model.Member.Phone" class="form-control" readonly="@Model.edit" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Member.Email" class="control-label"></label>
        <input asp-for="@Model.Member.Email" class="form-control" readonly="@Model.edit" />
    </div>

    
    <div class="formgroup">
        <input type="submit" asp-page-handler="FinnishEdit" value="Finish" class="btn btn-primary" />
    </div>
</form>
@if (Model.edit)
{
    <form method="Post" asp-page-handler="WannaEdit" enctype="multipart/form-data">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </form>
}
else
{
    <form method="Post" asp-page-handler="FinnishEdit" enctype="multipart/form-data">
        <input type="submit" value="Finnish" class="btn btn-primary" />
    </form>
}



