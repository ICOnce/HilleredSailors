@page
@model HilleredSailors.Pages.Bookings.DeleteBookingModel
@{
    ViewData["Title"] = "DeleteBooking";
}
<h1>Delete Booking</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Booking.Id" class="control-label"></label>
                <input asp-for="@Model.Booking.Id" class="form-control" required="true" readonly="true" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.Booker.Name" class="control-label"></label>
                <input asp-for="@Model.Booking.Booker.Name" class="form-control" required="true" readonly="true" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.Boat.SailNumber" classs="control-label"></label>
                <input asp-for="@Model.Booking.Boat.SailNumber" class="form-control" required="true" readonly="true" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.StartTime" classs="control-label"></label>
                <input asp-for="@Model.Booking.StartTime" class="form-control" required="true" readonly="true" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.EndTime" classs="control-label"></label>
                <input asp-for="@Model.Booking.EndTime" class="form-control" required="true" readonly="true" />
            </div>
            <div class="formgroup">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-page="ShowBookings">Back to List</a>
    </div>
</div>
