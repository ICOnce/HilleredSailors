@page
@model HilleredSailors.Pages.Boats.AddBoAtModel
@{
    ViewData["Title"] = "AddBoat";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="@Model.boat.Model" class="control-label"></label>
        <input asp-for="@Model.boat.Model" class="form-control" required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.boat.Name" class="control-label"></label>
        <input asp-for="@Model.boat.Name" class="form-control" required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.boat.SailNumber" class="control-label"></label>
        <input asp-for="@Model.boat.SailNumber" class="form-control" required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.boat.MotorInfo" class="control-label"></label>
        <input asp-for="@Model.boat.MotorInfo" class="form-control" required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.boat.Length" class="control-label"></label>
        <input asp-for="@Model.boat.Length" class="form-control" required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.boat.Width" class="control-label"></label>
        <input asp-for="@Model.boat.Width" class="form-control" required="true"/>
    </div>


    <div class="formgroup">
        <input type="submit" value="Create Customer" class="btn btn-primary" />
    </div>
</form>
