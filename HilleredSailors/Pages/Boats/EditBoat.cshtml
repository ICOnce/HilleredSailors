@page
@model HilleredSailors.Pages.Boats.EditBoatModel
@{
    ViewData["Title"] = "EditBoat";
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.Boat.Model" class="control-label"></label>
        <input asp-for="@Model.Boat.Model" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Name" class="control-label"></label>
        <input asp-for="@Model.Boat.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.SailNumber" class="control-label"></label>
            <input asp-for="@Model.Boat.SailNumber" class="form-control" readonly="true"/>
    </div>
    <div class="form-group">
            <label asp-for="@Model.Boat.MotorInfo" class="control-label"></label>
            <input asp-for="@Model.Boat.MotorInfo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Width" class="control-label"></label>
        <input asp-for="@Model.Boat.Width" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Length" class="control-label"></label>
        <input asp-for="@Model.Boat.Length" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Edit Boat" class="btn btn-primary" />
    </div>
</form>
