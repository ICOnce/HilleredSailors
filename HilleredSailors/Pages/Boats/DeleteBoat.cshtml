@page
@model HilleredSailors.Pages.Boats.DeleteBoatModel
@{
    ViewData["Title"] = "DeleteBoat";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="@Model.Boat.Model" class="control-label"></label>
        <input asp-for="@Model.Boat.Model" class="form-control" required="true" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Name" class="control-label"></label>
        <input asp-for="@Model.Boat.Name" class="form-control" required="true" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.SailNumber" class="control-label"></label>
        <input asp-for="@Model.Boat.SailNumber" class="form-control" required="true" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.MotorInfo" class="control-label"></label>
        <input asp-for="@Model.Boat.MotorInfo" class="form-control" required="true" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Length" class="control-label"></label>
        <input asp-for="@Model.Boat.Length" class="form-control" required="true" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Boat.Width" class="control-label"></label>
        <input asp-for="@Model.Boat.Width" class="form-control" required="true" readonly="true" />
    </div>


    <div class="formgroup">
        <input type="submit" value="Delete" class="btn btn-primary" />
    </div>
</form>
