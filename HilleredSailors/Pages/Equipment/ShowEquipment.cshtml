@page
@model HilleredSailors.Pages.Equipment.ShowEquipmentModel
@{
	ViewData["Title"] = "ShowEquipment";
}

<h1>Equipment & Tools</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Equipment equipment in Model.Equipment)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Status</td>
                <td><a asp-page="BorrowEquipment" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-page="ReturnEquipment" asp-route-itemid="@item.Id">Return</a></td>
                <td><a asp-page="DelteEquipment" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>