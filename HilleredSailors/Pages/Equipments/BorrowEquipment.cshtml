@page
@model HilleredSailors.Pages.Equipment.BorrowEquipmentModel
@{
    ViewData["Title"] = "BorrowEquipment";
}

<h1>Borrow Equipment & Tools</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="@Model.Equipment.Id" class="control-label"></label>
        <input asp-for="@Model.Equipment.Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Equipment.Name" class="control-label"></label>
        <input asp-for="@Model.Equipment.Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Equipment.Name" class="control-label"></label>
        <input asp-for="@Model.Equipment.Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Equipment.Status" class="control-label"></label>
        <input asp-for="@Model.Equipment.Status" class="form-control" />
    </div>

    <div class="formgroup">
        <input type="submit" value="Borrow" class="btn btn-primary" />
    </div>
</form>